<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |post_comment| %>
      <tr>
        <td><%= post_comment.body %></td>
        <td><%= link_to 'Show', post_comment_path(:id, :post_id) %></td>
        <td><%= link_to 'Edit', edit_post_comment_path(post_comment, :id, :post_id) if current_user.id == post.user_id %></td>
        <td><%= link_to 'Destroy', post_comment_path(:id, :post_id), method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == post.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_post_comment_path %>
